<div class="jumbotron jumbotron-fluid">
    <div class="container">
        <h1 class="display-4 text-center">Watch Da Movie</h1>
    </div>
</div>
<div class="wrap">
    <div class="row">
        <div class="col-6">
            <p class="text-center">Movies to watch</p>
            <br>
            <ul>
                {{#each movies}}
                {{#unless watched}}
                {{> movies/movie-block watched=true}}
                {{/unless}}
                {{/each}}
            </ul>
        </div>

        <div class="col-6">
            <p class="text-center">Watched movies</p>
            <br>
            <ul>
                {{#each movies}}
                {{#if watched}}
                {{> movies/movie-block watched=false}}
                {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>
</div>

<br>

<div class="container">
    <div class="row">
        <div class="col-4">
            <img id="camera" src="/assets/images/Left-Camera.png">
        </div>
        <div class="col-4">
            <h2>Add a movie</h2>
            <form class="create-form">

                <div class="form-group">
                    <label for="movie">Movie Name:</label>
                    <input type="text" id="movie" name="name">
                </div>

                <div class="form-group">
                    <label for="watched"></label><br>
                    <input type="radio" name="watched" value="0" checked> Need to watch!
                </div>

                <button type="submit">Add movie</button>
            </form>
        </div>
        <div class="col-4">
            <img id="camera" src="/assets/images/Right-Camera.png">
        </div>
    </div>
</div>