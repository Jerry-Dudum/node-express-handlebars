<div class="jumbotron jumbotron-fluid">
    <div class="container">
        <h1 class="display-4">Watch Da Movie</h1>
    </div>
</div>

<div class="row">
    <div class="col-6">
        <p class="h2 text-center">Movies to watch</p>
        <ul>
            {{#each Movies}}
            {{#unless watched}}
            {{> Movies/movie-block watched=true}}
            {{/unless}}
            {{/each}}
        </ul>
    </div>

    <div class="col-6">
        <p class="h2 text-center">Watched movies</p>
        <ul>
            {{#each Movies}}
            {{#if watched}}
            {{> Movies/movie-block watched=false}}
            {{/if}}
            {{/each}}
        </ul>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <h2>Add a movie</h2>
        <form class="create-form">
        
            <div class="form-group">
                <label for="movie">Movie Name:</label>
                <input type="text" id="ca" name="name">
            </div>
        
            <div class="form-group">
                <label for="watched">Watched?</label><br>
                <input type="radio" name="watched" value="1" checked> Not Watched<br>
                <input type="radio" name="watched" value="0"> Watched
            </div>
        
            <button type="submit">Add movie</button>
        </form>
    </div>
</div>